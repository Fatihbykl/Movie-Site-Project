@model WebProgramlamaProje.Models.User
@{ 
    ViewData["Title"] = "Edit Profile";
}
<div class="profile-header">
    <nav class="profile-nav">
        <ul>
            <li class="img-username">
                <img src="~/media/profile-user.png" /> <span>@Model.UserName</span>
            </li>
            <li><a asp-action="Index" asp-route-username="@User.Identity.Name">Profile</a></li>
            <li><a asp-action="Films" asp-route-username="@User.Identity.Name">Films</a></li>
            <li><a asp-action="Reviews" asp-route-username="@User.Identity.Name">Reviews</a></li>
            <li class="active"><a asp-action="EditProfile" asp-route-username="@User.Identity.Name">Edit Profile</a></li>
        </ul>
    </nav>
</div>
<h2 class="col-heading">
    edit profile
</h2>
<div class="edit-profile-wrap">
    <form method="post" action="/">
        Username:
        <input asp-for="UserName" class="form-control" disabled type="text" />
        Name:
        <input asp-for="Name" class="form-control" type="text" />
        Email:
        <input asp-for="Email" class="form-control" type="text" />
        <button type="submit" class="btn btn-outline-success float-right">Save</button> 
    </form>
</div>